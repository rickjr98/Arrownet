<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userImageMessageFrom"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/blank_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageMessageFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_from_edge"
        android:maxWidth="240dp"
        android:maxHeight="240dp"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="9dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toEndOf="@+id/userImageMessageFrom"
        app:layout_constraintTop_toTopOf="@+id/userImageMessageFrom"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/imageMessageFromTimeStamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/imageMessageFrom"
        app:layout_constraintTop_toBottomOf="@+id/imageMessageFrom" />
</androidx.constraintlayout.widget.ConstraintLayout>